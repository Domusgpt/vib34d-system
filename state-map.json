  "navigation": {
    "keyboard": {
      "ArrowRight": "navigateNext()",
      "ArrowLeft": "navigatePrevious()",
      "ArrowUp": "navigateTo('home')",
      "Space": "cycleState()",
      "Digit1": "navigateTo('home')",
      "Digit2": "navigateTo('tech')",
      "Digit3": "navigateTo('media')",
      "Digit4": "navigateTo('innovation')",
      "Digit5": "navigateTo('context')",
      "KeyH": "navigateTo('home')",
      "KeyT": "navigateTo('tech')",
      "KeyM": "navigateTo('media')",
      "KeyI": "navigateTo('innovation')",
      "KeyC": "navigateTo('context')"
    },
    "mouse": {
      "wheel": {
        "up": "increaseParameter('u_dimension', 0.1)",
        "down": "decreaseParameter('u_dimension', 0.1)"
      },
      "gestures": {
        "swipeLeft": "navigateNext()",
        "swipeRight": "navigatePrevious()",
        "swipeUp": "navigateTo('home')"
      }
    }
  },

  "transitions": {
    "default": {
      "duration": 800,
      "curve": "easeInOut",
      "type": "morph"
    },
    "stateSpecific": {
      "home->tech": {
        "duration": 600,
        "curve": "easeOut", 
        "effects": ["glitch", "bloom"]
      },
      "tech->media": {
        "duration": 1000,
        "curve": "easeInOut",
        "effects": ["chromatic", "distortion"]
      },
      "media->innovation": {
        "duration": 700,
        "curve": "parabolic",
        "effects": ["glitch", "chromatic"]
      },
      "innovation->context": {
        "duration": 900,
        "curve": "easeInOut",
        "effects": ["bloom"]
      }
    }
  },

  "initialState": "home",

  "stateSequence": ["home", "tech", "media", "innovation", "context"],

  "globalSettings": {
    "enableTransitions": true,
    "enableKeyboardNavigation": true,
    "enableMouseNavigation": true,
    "enableTouchGestures": true,
    "autoHideInactiveCards": true,
    "preserveParameterHistory": true,
    "maxHistoryStates": 10
  }
}